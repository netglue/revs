{
    "name": "netglue/revs",
    "description": "Simple utility for revving file name versions and deleting old revisions",
    "type": "library",
    "license": "MIT",
    "authors" : [
        {
            "name" : "George Steel",
            "email" : "george@net-glue.co.uk",
            "homepage" : "https://netglue.uk/"
        }
    ],
    "config" : {
        "minimum-stability" : "stable",
        "prefer-stable" : true,
        "sort-packages": true,
        "platform": {
            "php": "7.3.99"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "bin": [
        "bin/rev"
    ],
    "require": {
        "php": ">=7.3",
        "ramsey/uuid": "^3.8|^4",
        "symfony/console": "^3||^4||^5"
    },
    "require-dev": {
        "doctrine/coding-standard": "^8",
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "^3"
    },
    "autoload": {
        "psr-4": {
            "Netglue\\Revs\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Netglue\\RevsTest\\" : "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover build/clover.xml"
    }
}
